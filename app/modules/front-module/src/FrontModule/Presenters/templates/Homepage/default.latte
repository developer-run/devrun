{block content}

	<div id="banner">
		<h1 n:block=title>Developer Run!</h1>
	</div>


	{control articleControl}

	{_site.message.preklad}

	<div class="boxes">
		<div>
			<h2>Všechny články</h2>
			{foreach $articles['all'] as $article}
				{$article->content|noescape}
				<br>
			{/foreach}
		</div>

		<div>

			{ifset $articles['homepage']}
				<h2>Homepage</h2>
				{foreach $articles['homepage'] as $article}
					{$article->content|noescape}
					<br>
				{/foreach}
			{/ifset}
		</div>

		<div>

			{ifset $articles['default']}
				<h2>Default</h2>
				{foreach $articles['default'] as $article}
					{$article->content|noescape}
					<br>
				{/foreach}
			{/ifset}


		</div>

		{ifset $articles['dalsi']}
			<h2>Další články</h2>
			{foreach $articles['dalsi'] as $article}
				{$article->content|noescape}
			{/foreach}
		{/ifset}
	</div>


	<h3>Produkty</h3>
	<hr>
	{control productsControl}



	<section class="well">
		<h3>Administrovatelné komponenty
			<small> pozor, nejedná se o články! Jsou to pevné komponenty. Texty jsou na základě translate překladů. Editovat by se mělo na základě inline ckeditoru.</small>
		</h3>
		<div class="row">
			{for $i=1;$i<=3;$i++}
			<div class="col-sm-6 col-md-4">
				<div class="thumbnail"><img alt="100%x200" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;"
											src="data:image/svg+xml;base64,"
											data-holder-rendered="true">
					<div class="caption">

						{*{editable}*}
						{*<p>Pokus</p>*}
						{*{/editable}*}

						{*{edit_}{/edit_}*}



						{*<h3 n:editable="site.homepage.demoComponent.title$i">{_site.homepage.demoComponent.title$i}</h3>*}

						<h3 n:editable="site.homepage.demoComponent.title$i">{_site.homepage.demoComponent.title$i|noescape}</h3>
						<p n:editable="site.homepage.demoComponent.content$i">{_site.homepage.demoComponent.content$i|noescape}</p>
					</div>
				</div>
			</div>
			{/for}
		</div>
	</section>


{/block}

{*{block scripts}*}
	{*{include parent}*}
{*{/block}*}


{block head}
{/block}
